check process simple-python-flask-app
  with pidfile /var/vcap/sys/run/simple-python-flask-app/simple-python-flask-app.pid
  start program "/var/vcap/jobs/simple-python-flask-app/bin/monit_debugger ctl '/var/vcap/jobs/simple-python-flask-app/bin/ctl start'"
  stop program "/var/vcap/jobs/simple-python-flask-app/bin/monit_debugger ctl '/var/vcap/jobs/simple-python-flask-app/bin/ctl stop'"
  group vcap
